<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
        <solid android:color="@color/common_btn_color_enable" />

        <corners android:radius="@dimen/radiu_size" />

    </shape></item>
    <item android:state_focused="true"><shape>
        <solid android:color="@color/common_btn_color_pressed" />

        <corners android:radius="@dimen/radiu_size" />

    </shape></item>
    <item android:state_pressed="true"><shape>
        <solid android:color="@color/common_btn_color_pressed" />

        <corners android:radius="@dimen/radiu_size" />

    </shape></item>
    <item><shape>
        <solid android:color="@color/common_btn_color" />

        <corners android:radius="@dimen/radiu_size" />

    </shape></item>

</selector>