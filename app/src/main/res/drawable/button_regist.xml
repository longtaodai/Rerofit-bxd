<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false"><shape>
        <solid android:color="@color/main_gray_bg" />

        <corners android:radius="@dimen/radiu_size" />

        <padding android:bottom="@dimen/radiu_size" android:left="@dimen/radiu_size" android:right="@dimen/radiu_size" android:top="@dimen/radiu_size" />
    </shape></item>
    <item android:state_focused="true"><shape>
        <solid android:color="@color/main_gray_bg" />

        <corners android:radius="@dimen/radiu_size" />

        <padding android:bottom="@dimen/radiu_size" android:left="@dimen/radiu_size" android:right="@dimen/radiu_size" android:top="@dimen/radiu_size" />
    </shape></item>
    <item android:state_pressed="true"><shape>
        <solid android:color="@color/main_gray_bg" />

        <corners android:radius="@dimen/radiu_size" />

        <padding android:bottom="@dimen/radiu_size" android:left="@dimen/radiu_size" android:right="@dimen/radiu_size" android:top="@dimen/radiu_size" />
    </shape></item>
    <item android:top="1dp" android:left="1dp"  android:bottom="1dp" android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="4dp" android:topRightRadius="4dp"
                android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" />
            <stroke android:width="1dp" android:color="#fff0f0f0" />
        </shape>
    </item>
</selector>